package com.pdf.com.pdf.secure;

import java.io.File;
import java.io.IOException;

import org.apache.pdfbox.pdmodel.PDDocument;
import org.apache.pdfbox.pdmodel.encryption.AccessPermission;
import org.apache.pdfbox.pdmodel.encryption.StandardProtectionPolicy;


public class App {
  public static void main(String[] args) {

		try {
	        // Load the PDF document
	        File inputFile = new File("D:\\Ak\\1276_AkshaySantoshKhaire_SalarySlip.pdf"); // Replace with your input PDF file path
	        PDDocument document = PDDocument.load(inputFile);

	        // Set a password for the PDF (use the same password for both user and owner)
	        String password = "Akshay@123";

	        // Set encryption options
	        AccessPermission accessPermission = new AccessPermission();
	        StandardProtectionPolicy protectionPolicy = new StandardProtectionPolicy(password, password, accessPermission);
	        protectionPolicy.setEncryptionKeyLength(128); // You can set the key length as needed

	        // Apply the protection policy to the document
	        document.protect(protectionPolicy);

	        // Save the protected PDF
	        File outputFile = new File("D:\\Ak1\\1276_AkshaySantoshKhaire_SalarySlip.pdf"); // Replace with your output PDF file path
	        document.save(outputFile);

	        // Close the PDF document
	        document.close();

	        System.out.println("Password set for the PDF successfully.");
	    } catch (IOException e) {
	        e.printStackTrace();
	    }
	}

  }

	  
	  

